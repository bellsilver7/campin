generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // url      = "file:./dev.db"
}

model Campsite {
  id             String    @id @default(uuid())
  contentId      Int
  name           String
  city           String
  state          String
  address        String
  intro          String?
  description    String?
  imageUrl       String?
  reservationUrl String?
  price          Int?
  amenities      Amenity[]
  reviews        Review[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
}

model Amenity {
  id         String   @id @default(uuid())
  name       String
  campsiteId String
  campsite   Campsite @relation(fields: [campsiteId], references: [id])
}

model Review {
  id         String    @id @default(uuid())
  rating     Int
  text       String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime?
  campsiteId String
  campsite   Campsite  @relation(fields: [campsiteId], references: [id])
  // TODO author String User;
}
