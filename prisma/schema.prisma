generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // url      = "file:./dev.db"
}

model Campsite {
  id             String    @id @default(uuid()) @db.Uuid
  contentSource  String    @db.VarChar(12)
  contentId      String    @db.VarChar(12)
  name           String    @db.VarChar(100)
  city           String    @db.VarChar(4)
  state          String    @db.VarChar(4)
  address        String    @db.VarChar(100)
  intro          String?   @db.VarChar(100)
  description    String?
  imageUrl       String?   @db.VarChar(200)
  reservationUrl String?   @db.VarChar(200)
  phoneNumber    String?   @db.VarChar(16)
  price          Int?      @db.Integer()
  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
  amenities      Amenity[]
  Review         Review[]
}

model Amenity {
  id         String   @id @default(uuid()) @db.Uuid
  name       String   @db.VarChar(50)
  campsiteId String   @db.Uuid()
  campsite   Campsite @relation(fields: [campsiteId], references: [id])
}

model Review {
  id         String    @id @default(uuid()) @db.Uuid
  rating     Int
  text       String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime?
  campsiteId String    @db.Uuid()
  campsite   Campsite  @relation(fields: [campsiteId], references: [id])
  // TODO author String User;
}
