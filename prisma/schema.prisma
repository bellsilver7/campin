// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = "file:./dev.db"
  url      = env("DATABASE_URL")
}

model Campsite {
  id          Int         @id @default(autoincrement())
  contentId   Int         @unique
  name        String
  intro       String?
  description String?
  city        String
  state       String
  address     String
  imageUrl    String?
  bookingUrl  String?
  price       Int?
  amenities   Amenities[]
}

model Amenities {
  id         Int      @id @default(autoincrement())
  name       String
  campsiteId Int
  campsite   Campsite @relation(fields: [campsiteId], references: [id])
}
