// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = "file:./dev.db"
  url      = env("DATABASE_URL")
}

model Campsite {
  id             String      @id @default(uuid())
  contentId      Int         @unique
  name           String
  intro          String?
  description    String?
  city           String
  state          String
  address        String
  imageUrl       String?
  reservationUrl String?
  price          Int?
  amenities      Amenities[]
}

model Amenities {
  id         String   @id @default(uuid())
  name       String
  campsiteId String
  campsite   Campsite @relation(fields: [campsiteId], references: [id])
}
